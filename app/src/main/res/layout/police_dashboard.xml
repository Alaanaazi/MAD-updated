<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dashboard"
    tools:context=".PoliceDashboard">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textViewtitle"
            android:layout_width="243dp"
            android:layout_height="77dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="84dp"
            android:layout_marginBottom="49dp"
            android:fontFamily="@font/aldrich"
            android:gravity="center"
            android:text="Welcome Police Station"
            android:textColor="@color/colorTitle"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="0dp"
            android:layout_height="175dp"
            android:layout_marginTop="35dp"
            android:orientation="horizontal"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewtitle">

            <androidx.cardview.widget.CardView
                android:id="@+id/NewsCardViewPolice"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/butt3">

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="102dp"
                        android:layout_height="89dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        app:srcCompat="@drawable/news" />

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="142dp"
                        android:layout_height="36dp"
                        android:layout_below="@id/imageView1"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="0dp"
                        android:fontFamily="@font/amaranth"
                        android:gravity="center"
                        android:text="News"
                        android:textColor="#000000"
                        android:textSize="16sp" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/AlertZoneCardViewPolice"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/butt3">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="102dp"
                        android:layout_height="89dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        app:srcCompat="@drawable/alert_zone" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="139dp"
                        android:layout_height="36dp"
                        android:layout_below="@id/imageView2"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="0dp"
                        android:fontFamily="@font/amaranth"
                        android:gravity="center"
                        android:text="Alert Zone"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="0dp"
            android:layout_height="175dp"
            android:orientation="horizontal"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout">

            <androidx.cardview.widget.CardView
                android:id="@+id/WantedlistCardViewPolice"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/butt3">

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="102dp"
                        android:layout_height="89dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        app:srcCompat="@drawable/wanted_list" />

                    <TextView
                        android:id="@+id/getcivilphone"
                        android:layout_width="149dp"
                        android:layout_height="37dp"
                        android:layout_below="@id/imageView3"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="-1dp"
                        android:fontFamily="@font/amaranth"
                        android:gravity="center"
                        android:text="Wanted List"
                        android:textColor="#000000"
                        android:textSize="16sp" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/EmeregencyCardViewPolice"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/butt3">

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="102dp"
                        android:layout_height="89dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        app:srcCompat="@drawable/emergency_contact" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="158dp"
                        android:layout_height="36dp"
                        android:layout_below="@id/imageView4"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/amaranth"
                        android:gravity="center"
                        android:text="Emergency Contact"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="0dp"
            android:layout_height="175dp"
            android:orientation="horizontal"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

            <androidx.cardview.widget.CardView
                android:id="@+id/CivilProfileCardViewPolice"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/butt3">

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="102dp"
                        android:layout_height="89dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        app:srcCompat="@drawable/profile" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="149dp"
                        android:layout_height="37dp"
                        android:layout_below="@id/imageView5"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="-1dp"
                        android:fontFamily="@font/amaranth"
                        android:gravity="center"
                        android:text="Profile"
                        android:textColor="#000000"
                        android:textSize="16sp" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/logoutcardviewPolice"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/butt3">

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="102dp"
                        android:layout_height="89dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        app:srcCompat="@drawable/log_out" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="158dp"
                        android:layout_height="36dp"
                        android:layout_below="@id/imageView6"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/amaranth"
                        android:gravity="center"
                        android:text="Log Out"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>